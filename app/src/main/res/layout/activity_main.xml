<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/message_edit_text"
        android:layout_width="267dp"
        android:layout_height="60dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="563dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="55dp"
        android:hint="Enter message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/send_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/received_text_view" />

    <Button
        android:id="@+id/send_button"
        android:layout_width="90dp"
        android:layout_height="58dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="618dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="55dp"
        android:text="Send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/message_edit_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/received_text_view"
        android:layout_width="0dp"
        android:layout_height="19dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="34dp"
        android:text="Received message:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>